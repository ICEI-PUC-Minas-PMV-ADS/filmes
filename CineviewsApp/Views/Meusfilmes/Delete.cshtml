@model CineviewsApp.Models.Meufilme

@{
    ViewData["Title"] = "Delete";
}


<div>
    <h4 class="mb-4">Deletar Filme</h4>

    <dl class="row">
        <dt class = "col-sm-2 mb-2">
            @Html.DisplayNameFor(model => model.MeuScore)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MeuScore)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Filme)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Filme.Nome)
        </dd>
    </dl>
    
    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="btn btn-outline-secondary">&#8630 Voltar</a>
        <input type="submit" value="Deletar" class="btn btn-danger" />        
    </form>
</div>
